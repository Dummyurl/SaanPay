<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_signup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:focusableInTouchMode="true"
    android:padding="@dimen/activity_horizontal_margin"
    tools:context="com.saxxis.recharge.activities.main.SignupActivity">


    <com.saxxis.recharge.utils.MyViewPager
        android:id="@+id/viewPagerVertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/signup_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/signup_et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:cursorVisible="true"
                android:drawableLeft="@drawable/ic_account"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_account"
                android:gravity="start"
                android:hint="Name"
                android:inputType="text"
                android:maxLines="1"
                android:padding="16dp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/silver"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/silver" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/signup_et_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:cursorVisible="true"
                android:drawableLeft="@drawable/ic_mobile_login"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_mobile_login"
                android:gravity="start"
                android:hint="Phone"
                android:inputType="number"
                android:maxLength="10"
                android:maxLines="1"
                android:padding="16dp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/silver"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/silver" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/signup_et_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:cursorVisible="true"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_email"
                android:gravity="start"
                android:hint="Email"
                android:inputType="text"
                android:maxLines="1"
                android:padding="16dp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/silver"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/silver" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/signup_et_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_password"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_password"
                android:hint="@string/password"
                android:inputType="textPassword"
                android:maxLines="1"
                android:padding="16dp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/silver"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/silver" />

            <android.support.design.widget.TextInputEditText
                android:id="@+id/signup_et_conf_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_password"
                android:drawablePadding="8dp"
                android:drawableStart="@drawable/ic_password"
                android:hint="@string/confirm_pwd"
                android:inputType="textPassword"
                android:maxLines="1"
                android:padding="16dp"
                android:textColor="@color/colorPrimary"
                android:textColorHint="@color/silver"
                android:textSize="18sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:background="@color/silver" />

            <CheckBox
                android:id="@+id/terms_conditions_reg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="8dp"
                android:buttonTint="@color/colorchange"
                android:checked="true"
                android:text="@string/terms_condtns"
                android:textColor="@color/silver"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/signup_btn_verify"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="32dp"
                android:layout_marginRight="32dp"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:background="@drawable/ic_rectangle"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:gravity="center"
                android:padding="15dp"
                android:text="@string/register"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/alreadyhaveacc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:padding="5dp"
                android:text="Already Have An account ? Login"
                android:textColor="@color/colorchange"
                android:textSize="16sp" />
        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/referral_code_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:text="Referral Code" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <EditText
                android:id="@+id/signup_et_rcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:gravity="center_horizontal"
                android:hint="(Optional)"
                android:inputType="text"
                android:maxLength="11"
                android:maxLines="1"
                android:textSize="16sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/colorGray" />

        </RelativeLayout>

    </LinearLayout>

