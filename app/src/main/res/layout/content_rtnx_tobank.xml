<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:id="@+id/availbalance"
                    android:layout_marginTop="10dp"
                    android:text="Available Balance   &#8377; 0.0"
                    android:background="@drawable/buttonshape"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="10dp"
                    android:layout_margin="10dp"/>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatAutoCompleteTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/colorchange"
                        android:hint="Account Holder's Name"
                        android:textColorHint="@color/colorchange"
                        android:inputType="text"
                        android:background="@drawable/spinner_background"
                        android:textSize="16sp"
                        android:id="@+id/txtobank_accname"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="@color/colorBlack"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <android.support.v7.widget.AppCompatAutoCompleteTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:textColor="@color/colorchange"
                        android:hint="Bank Name"
                        android:textSize="16sp"
                        android:background="@color/white"
                        android:layout_gravity="center"
                        android:gravity="center_vertical"
                        android:textColorHint="@color/colorchange"
                        android:id="@+id/txtobank_bankname"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        android:background="@color/colorBlack"/>

                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorchange"
                    android:hint="Account Number"
                    android:textSize="16sp"
                    android:maxLength="20"
                    android:textColorHint="@color/colorchange"
                    android:inputType="number"
                    android:id="@+id/txtobank_acno"/>

                </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorchange"
                    android:hint="IFSC Code"
                    android:maxLength="11"
                    android:textColorHint="@color/colorchange"
                    android:inputType="text"
                    android:textAllCaps="true"
                    android:id="@+id/txtobank_ifsccode"/>

                </android.support.design.widget.TextInputLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <android.support.design.widget.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginTop="10dp"
                            android:hint="Amount"
                            android:maxLength="5"
                            android:inputType="number"
                            android:padding="10dp"
                            android:background="@color/white"
                            android:textColor="@color/colorchange"
                            android:textColorHint="@color/colorchange"
                            android:id="@+id/txtobank_amount"
                            android:textSize="16sp" />
                    </android.support.design.widget.TextInputLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.2"
                        android:id="@+id/fee_txt"
                        android:textSize="14sp"
                        android:visibility="gone"
                        android:textColor="@color/colorRedDark"
                        android:layout_gravity="center_vertical"
                        android:layout_height="wrap_content"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="0.4"
                        android:id="@+id/netpayable_txt"
                        android:textSize="14sp"
                        android:visibility="gone"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/colorRedDark"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:background="@color/colorBlack"/>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:textSize="16sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorchange"
                    android:hint="Description (Optional)"
                    android:textColorHint="@color/colorchange"
                    android:inputType="text"
                    android:id="@+id/txtobank_describe"/>

                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="Proceed"
                    android:id="@+id/proceed_topayto_bank"
                    android:background="@drawable/buttonshape"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="10dp"
                    android:layout_margin="10dp"/>

            </LinearLayout>
        </ScrollView>
    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:tabGravity="center"
        android:layout_gravity="bottom"
        android:background="@color/mainTabColor"
        app:tabIndicatorColor="@color/colorWhite"
        app:tabIndicatorHeight="2dp" />

</LinearLayout>